@model Northwind.Entities.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title" style="margin-top:15px;">Edit Profile</h4>
        </div>
        <div class="content">
            <form action="/Admin/Edit" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Product Id (disabled)</label>
                            <input type="text" disabled class="form-control" value="@Model.ProductID">
                            <input type="hidden" class="form-control" value="@Model.ProductID" name="ProductID">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Product Name</label>
                            <input type="text" class="form-control" value="@Model.ProductName" name="ProductName">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Unit Price</label>
                            <input type="text" min="0.000" max="10000.00" step="0.500" class="form-control" value=" @Math.Round(@Model.UnitPrice,1)" name="UnitPrice">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Category</label>
                            <select name="CategoryID" class="form-control">

                                @foreach (var item in ViewBag.Categories)
                                {
                                    if (item.CategoryID == Model.CategoryID)
                                    {
                                        <option value="@item.CategoryID" selected class="form-control">@item.CategoryName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.CategoryID" class="form-control">@item.CategoryName</option>
                                    }

                                }
                            </select>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-info btn-fill pull-right">Edit</button>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>
