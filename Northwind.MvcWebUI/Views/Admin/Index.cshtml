@model IEnumerable<Northwind.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-top:0;margin-bottom:10px;">Product List</h2>

@Html.ActionLink("Create New Product", "CreateNew")

<div class="col-md-12"  style="margin-top:15px;">
    <div class="card">
        <div class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
                <thead>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>Unit Price</th>
                <th>Edit</th>
                <th>Delete</th>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductID</td>
                            <td>@product.ProductName</td>

                            @if (product.CategoryID != null)
                            {
                                <td>@product.Category.CategoryName</td>
                            }
                            
                            <td>$@product.UnitPrice</td>
                            <td>@Html.ActionLink("Edit", "Edit", new { productId = product.ProductID })</td>
                            <td>@Html.ActionLink("Delete", "Delete", new { productId = product.ProductID })</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

















